<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity" >

    <ImageView
        android:layout_margin="10dp"
        android:id="@+id/rectangle_box"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/edit_radius"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rectangle_box"
        android:singleLine="true"
        android:numeric="integer"
        android:text="20"
        />

    <ImageView
        android:layout_below="@id/edit_radius"
        android:id="@+id/rectangle_box2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/edit_radius2"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rectangle_box2"
        android:singleLine="true"
        android:numeric="integer"
        android:text="20"
        />


</RelativeLayout>
